<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/layout_sp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/trasua_4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_namesp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="6dp"
            android:layout_marginBottom="10dp"
            android:text="Trà sữa trân châu"
            android:textColor="#000"
            android:textSize="16dp"
            tools:layout_editor_absoluteY="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_namesp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Giá:"
                android:textColor="#F26B38"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_giasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50000 vnđ"
                android:textColor="#F26B38"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/baseline_favorite_24_4"/>
    </RelativeLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>